
<div class="chapter-banner index-banner-1">


  <div class="headline-container group">
    <div class="left-pane">

      <p class="welcome">
        Welcome <%= App.CURRENT_USER.username.capitalize() %>!
      </p>

      <p class="tally-groups-events">
        We currently hosts <%= groupCount %> groups of various interests, as well <%= eventCount %> huddle events where you can relax, have fun, and mingle with other huddlers...
      </p>

      <div class="search-bar-container group">

        <div class="search-icon">
          <p><span class="glyphicon glyphicon-search"></span></p>
        </div>

        <div class="search-input-container">
          <input class="search-input" type="text" name="name" placeholder="Search for groups, huddles, and huddlers ..." autocomplete="off"/>
        </div>

      </div>

    </div>

    <div class="right-pane">

      <div class="carousel-and-text">

        <div class="group-index-carousel">

          <div id="owl-example-1" class="owl-carousel owl-theme">

            <% slideShowImages.forEach(function(image){ %>
              <div class="item hover">
                <a href="#events/<%= image.escape('imageable_id')%>">
                  <img src="<%= image.escape('url_cropped') %>" height='280'>
                </a>
              </div>
            <% }) %>

          </div>


        </div>

        <p class="slide-show-text">
          Check out a recent Huddle!
        </p>

      </div>
    </div>

  </div>


</div>

<div class="chapter-banner index-banner-2">

</div>

<div class="chapter-banner index-banner-3">

</div>


<div class="groups-container group"></div>

<script>
  $('.groups-container').toggle()
  $('.search-icon').toggle()

  setTimeout(function() {
    $('.groups-container').fadeIn()
    setTimeout(function() {
      $('.search-icon').fadeIn().addClass("animated zoomIn")
    }, 300)
  }, 200)



  $(document).ready(function() {

    $("#owl-example-1").owlCarousel({

      singleItem:true,
      paginationSpeed: 2000,

      autoPlay: 3000,
      stopOnHover: true,

    });
  });

  $('img').load(function(){
    $('#cover').fadeOut(300)
  })

</script>
