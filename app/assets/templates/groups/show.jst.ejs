
<div class="group-show-container show-container group">

  <div class="left-bar">

    <div class="info">
      <p class="heading">Group Information</p>

      <h1><%= group.escape('name') %></h1>
      <h3>created by: <%= group.escape('author_name')%></h3>
    </div>

    <br><br>

    <div class="start-event-div">
      <div class="small">
        Schedule a New
      </div><br>
      <div class="big">
        Huddle
      </div>
    </div>

    <br><br>
  </div>



  <div class="mid-bar">

    <div class="events">
      <p class="heading">Upcoming Events: </p>
      <div class="group-show-upcoming-events"></div>
    </div>

    <br><br>

    <div class="events">
      <p class="heading">Past Events: </p>
      <div class="group-show-past-events"></div>
    </div>

    <br><br>


    <div class="comments">
      <p class="heading">The Wall:</p>
      <div class="group-show-comment-list"></div>
    </div>

    <br><br>
      <form class="comment-form">

        <input type="hidden" name="commentable_id" value=<%= group_id %>>

        <input type="hidden" name="commentable_type" value="Group">

        <input type="hidden" name="author_id" value=<%= App.CURRENT_USER.id %>>

        <label>
          <textarea id="message" name='body' placeholder="Ask a question, share something, or post a comment ... "></textarea>
        </label>

        <button class="start-comment-btn">
          Post
        </button>

      </form>


    <br><br>
  </div>


  <div class="right-bar">

    <div class="members">
      <p class="heading">Members:</p>
      <div class="group-show-user-list"></div>
    </div>
  </div>

</div>
