
<% if (user.id == App.CURRENT_USER.id) { %>
  <% var userAlias = "You" %>
<% } else { %>
  <% var userAlias = user.escape('alias') %>
<% } %>

<div class="title-div-1 user-title-div-1">
  <h1><%= user.escape('name') %></h1>
</div>

<div class="title-div-2 user-title-div-2"></div>

<div class="title-div-3 user-title-div-3"></div>


<div class="user-show-container inner-container group">

  <div class="left-bar">


    <div class="groups">
      <p class="heading"><%= userAlias %> belongs to:</p>
      <div class="user-show-group-list"></div>
    </div>

    <br><br>
  </div>

  <div class="mid-bar">

    <!--  -->
    <div class="slide-show-div">
      <% if (images != undefined && images.length > 0) { %>

        <div class="group-index-carousel user">

          <div id="owl-example" class="owl-carousel owl-theme">

            <% images.forEach(function(image){ %>
              <div class="item hover">
                <img src="<%= image.escape("url_cropped") %>">
              </div>
            <% }) %>

          </div>
        </div>
      <% } else { %>
        <div class="group-index-carousel user">

          <div id="owl-example" class="owl-carousel owl-theme">

            <div class="item hover">
              <img src=" http://res.cloudinary.com/djdfz4a67/image/upload/o_51/v1440096559/male_bruusp.png">
            </div>

          </div>
        </div>
      <% } %>


      <% if (user.id === App.CURRENT_USER.id) { %>
        <button class="uploadImage join-group">Upload a Photo</button>
      <% } else { %>
        <p>* Only Huddlers can ad photos to this Huddle.</p>
      <% } %>

    </div>

    <!--  -->
    <div class="info">
      <p class="heading">
      <%= userAlias %></p>

      <h3>Short bio:
        <% var bio = user.escape('bio') %>
        <%= bio != 'null' ? bio : '' %>
      </h3>

    </div>

    <div class="comments">
      <p class="heading">The Wall:</p>
      <div class="user-show-comment-list"></div>

      <br><br>
        <form class="comment-form">

          <input type="hidden" name="commentable_id" value=<%= user_id %>>

          <input type="hidden" name="commentable_type" value="User">

          <input type="hidden" name="author_id" value=<%= App.CURRENT_USER.id %>>

          <label>
            <textarea class="comment-textarea" id="message" name='body' rows="4" cols="35" placeholder="Leave a comment for <%= userAlias %> ... "></textarea>
          </label>

          <button class="start-comment-btn">
            Post
          </button>

        </form>
    </div>


    <% if (user.id == App.CURRENT_USER.id) { %>
      <button class="uploadImage">Upload a Photo</button>
    <% } %>



  </div>



  <div class="right-bar">

    <% if (user.id == App.CURRENT_USER.id) { %>
      <% var userAlias = "Your" %>
    <% } else { %>
      <% var userAlias = user.escape('alias') + "'s" %>
    <% } %>

    <div class="events">
      <p class="heading"><%= userAlias %> upcoming events: </p>
      <div class="user-show-upcoming-events"></div>
    </div>

    <br><br>


    <br><br>
    <div class="events">
      <p class="heading"><%= userAlias %> past events: </p>
      <div class="user-show-past-events"></div>
    </div>

    <br><br>
  </div>
</div>

<script>
  $(document).ready(function() {

    $("#owl-example").owlCarousel({
      slideSpeed : 800,
      singleItem:true,
      paginationSpeed: 800,
      autoPlay: false,
      // stopOnHover: true,
    });

  });
</script>
